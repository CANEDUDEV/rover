{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Build Dependencies",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "scripts/bootstrap.sh",
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "source .venv/bin/activate; meson compile -C build",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "source .venv/bin/activate; meson test -C build",
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": false
            },
        },
        {
            "label": "Check",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "source .venv/bin/activate && ./scripts/check-src.sh"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": false
            },
        },
        {
            "label": "Flash bootloader",
